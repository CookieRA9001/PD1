<GamePage>
    arrayLenghtInput: arrayLenghtInput
    startGameBtn: startGameBtn
    numberListBox: numberListBox
    gameBox: gameBox
    logBox: logBox

    BoxLayout:
        orientation: 'vertical'
        size: (root.width, root.height)

        Label:
            id: logBox
            text: ""
            halign: "left"
            valign: "bottom"
            text_size: self.size
            size: (1,1)

        InputBox:
            id: arrayLenghtInput
            text: str(root.arrayLength)
            on_focus: root.lengthInput(self.text)

        GameButton:
            id: startGameBtn
            text: "START"
            on_release: root.startGame()
        
        BoxLayout:
            id: gameBox
            orientation: 'vertical'
            size_hint: (1, None)

            visible: False
            size_hint_x: 1 if self.visible else 0
            opacity: 1 if self.visible else 0
            disabled: not self.visible

            BoxLayout:
                height: 40
                orientation: 'horizontal'
                id: numberListBox
                size_hint: (1, None)
                spacing: 3

