<GamePage>
    arrayLenghtInput: arrayLenghtInput
    startGameBtn: startGameBtn
    numberListBox: numberListBox
    gameBox: gameBox
    logBox: logBox
    dropdownStartingPlayer: dropdownStartingPlayer
    dropdownAILogic: dropdownAILogic
    startSettingBox: startSettingBox

    BoxLayout:
        orientation: 'vertical'
        size: (root.width, root.height)

        BoxLayout:
            id: startSettingBox
            size: (root.width, root.height)
            orientation: 'vertical'

            Label:
                id: logBox
                text: ""
                halign: "left"
                valign: "bottom"
                text_size: self.size
                size: (1,1)

            InputBox:
                id: arrayLenghtInput
                text: str(root.arrayLength)
                on_focus: root.lengthInput(self.text)
                size_hint: (1, None)
                height: 40

            Spinner:
                id: dropdownStartingPlayer
                text: 'First'
                values: ('First', 'Second')
                size_hint: (1, None)
                height: 40

            Spinner:
                id: dropdownAILogic
                text: 'MinMax'
                values: ('MinMax', 'AlfaBeta')
                size_hint: (1, None)
                height: 40

            GameButton:
                id: startGameBtn
                text: "START"
                on_release: root.startGame()
                size_hint: (1, None)
                height: 40
        
        BoxLayout:
            id: gameBox
            orientation: 'vertical'
            size_hint: (1, None)

            visible: False
            size_hint_x: 1 if self.visible else 0
            opacity: 1 if self.visible else 0
            disabled: not self.visible

            BoxLayout:
                height: 40
                orientation: 'horizontal'
                id: numberListBox
                size_hint: (1, None)
                spacing: 3

