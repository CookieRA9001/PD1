<NumberButton>
    num1: num1
    num2: num2
    count: 15
    is_leftover: False
    size_hint: (1.95/root.count, None)
    orientation: 'horizontal'
    color_leftover_boarder: (0.9,0.1,0.1,1)
    color_hover_boarder: (0.9,0.9,1,1)
    color_defaut_boarder: (0.1,0.1,0.1,1)
    color_defaut_button: (0.9,0.9,0.9,1)
    color_leftover_button: (0.9,0.15,0.15,1)
    color_invisible_button: (0.1,0.9,0.1,0)

    canvas.before:
        Color:
            rgba: (root.color_leftover_boarder if root.is_leftover else root.color_hover_boarder) if root.hovering else root.color_defaut_boarder
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    GameButton:
        id: num1
        text: "0"
        size_hint: (0.5, 1)
        background_color: root.color_leftover_button if root.is_leftover else root.color_defaut_button
        on_release: root.numSelect()
    
    GameButton:
        id: num2
        text: "1"
        size_hint: (0.5, 1)
        background_color: root.color_invisible_button if root.is_leftover else root.color_defaut_button
        on_release: root.numSelect()
