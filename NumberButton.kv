<NumberButton>
    num1: num1
    num2: num2
    count: 15
    is_selected: False
    size_hint: (1.99/root.count, None)
    orientation: 'horizontal'

    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

    GameButton:
        id: num1
        text: "0"
        size_hint: (0.5, 1)
        background_color: (0.1,0.9,0.1,1) if root.is_selected else (0.9,0.9,0.9,1)
        on_release: root.numSelect()
    
    GameButton:
        id: num2
        text: "1"
        size_hint: (0.5, 1)
        background_color: (0.1,0.9,0.1,1) if root.is_selected else (0.9,0.9,0.9,1)
        on_release: root.numSelect()
